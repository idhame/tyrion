<div id="wrapper">
        <!-- Navigation -->
        <%= render 'pages/nav' %>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Manage Users</h1>
                        <% if flash[:updated_succesfully] != nil %>
                      <div class='alert alert-success' ><%= flash[:updated_succesfully] %> </div>
                        <% end %>
                        <div class="panel panel-default">
                        <div class="panel-heading">
                            DataTables Advanced Tables
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Email</th>
                                            <th>1</th>
                                            <th>2</th>
                                            <th></th>
                                            
                                         
                                        </tr>
                                    </thead>
                                    <tbody>  <% @users.each do |user| %> 
                                        <% if current_user != user %>
                                         <tr>
                                            <td><%= user.email %></td>
                                            <td><%= link_to 'Delete User', user, data: { method: :delete, confirm: 'Are you sure you want to delete this user?' } %></td>
                                            <td><% if user.account_active? %>
                                                    <%= link_to 'Lock User', lock_user_path(user.id), data: { method: :put, confirm: 'Are you sure you want to lock this user?' }  %> 
                                                <% else %>
                                                    <%= link_to 'Unlock User', unlock_user_path(user.id), data: { method: :put, confirm: 'Are you sure you want to unlock this user?' }  %> 
                                                <% end %></td>
                                            <td> <%= link_to 'Edit user', edit_path(user) %></td>
                                        <% end %>
                                        </tr>
                                    <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
</div>
 <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable({
                        responsive: true
                });
    });
    </script>
